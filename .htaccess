Options -MultiViews
RewriteEngine On
RewriteBase /

# 1. EXTERNAL REDIRECT: Removes .html from the URL bar
# If someone visits /page.html, this changes it to /page
RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
RewriteRule ^ /%1 [R=301,L,NE]

# 2. INTERNAL REWRITE: Maps clean URLs to .html files
# If someone visits /page, the server secretly looks for /page.html
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L,QSA]

# 3. Force HTTPS (Optional but Recommended)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]